{# new.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/signup.css')}}">
</head>
<body>
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form method="post" action="{{ path('app_users_new') }}" class="register-form" id="register-form">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_widget(form.name, {'attr': {'placeholder': 'Your Name'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Your Email'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.age, {'attr': {'placeholder': 'Your Age'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.genre, {'attr': {'placeholder': 'Your Gender'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.numTel, {'attr': {'placeholder': 'Your Phone Number'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.adresse, {'attr': {'placeholder': 'Your Address'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.password, {'attr': {'placeholder': 'Password'}}) }}
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register">
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="{{ asset('images/signup.jpg')}}" alt="sign up image"></figure>
                    <a href="#" class="signup-image-link">I am already a member</a>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
